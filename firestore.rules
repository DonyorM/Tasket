rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /groups/{groupId} {
      allow read, write: if request.auth != null && request.auth.token.email in resource.data.memberEmails;
      allow create: if request.auth != null
    }
    match /history/{groupId} {
    	allow read: if request.auth != null && request.auth.token.email in get(/databases/$(database)/documents/groups/$(groupId)).data.memberEmails
    }
  }
}